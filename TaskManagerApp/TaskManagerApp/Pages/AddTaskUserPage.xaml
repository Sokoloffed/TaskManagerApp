<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManagerApp.Pages.AddTaskUserPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Get possible users" Clicked="Button_Clicked"/>
            <ListView x:Name="tsList" ItemsSource="{Binding UsersList}"
                      SelectedItem="{Binding SelectedUserAddTask,Mode=TwoWay}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label Text="{Binding username}" FontSize="Medium"/>
                                    <Label Text="{Binding password}" FontSize="Medium"/>
                                    <Label Text="{Binding id}" FontSize="Small"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>